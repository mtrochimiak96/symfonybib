<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="/public/bootstrap.min.css">
			<link rel="stylesheet" href="/public/main.css">
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-sm bg-light navbar-light">
		<div class="container-fluid">
			<div class="navbar-header">
				<ul class="navbar-nav">
					<li class="nav-item active">
						<a class="navbar-brand" href="#">Bibliometr</a>
					</li>
				</div>

				<div class="collapse navbar-collapse">
					<a class="nav-link" href="{{ path('home') }}">Strona Główna</a>
				</li>
			</div>
			{% if app.user %}
				<li class="nav navbar-nav navbar-right">
					<a class="nav-link" href="{{ path('app_add_article') }}">Dodaj artykuł</a>
				</li>
				{% if app.user.role == "admin" %}
				<li class="nav navbar-nav navbar-right">
					<a class="nav-link" href="{{ path('admin') }}">Panel administratora</a>
				</li>
				{% endif %}
				<li class="nav navbar-nav navbar-right">
					<a class="nav-link" href="{{ path('app_logout') }}">Wyloguj</a>
				</li>
			{% else %}
				<li class="nav navbar-nav navbar-right">
					<a class="nav-link" href="{{ path('app_register') }}">Zarejestruj</a>
					<a class="nav-link" href="{{ path('app_login') }}">Zaloguj</a>
				</li>
			{% endif %}
		</ul>
	</div>
</nav>
		{% block body %}{% endblock %}
		{% block javascripts %}{% endblock %}
	</body>
</html>
